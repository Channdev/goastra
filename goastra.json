{
  "name": "goastra",
  "version": "1.0.0",
  "description": "GoAstra - Full-stack Go + Angular Framework",

  "api": {
    "type": "rest",
    "prefix": "/api/v1",
    "version": "v1"
  },

  "backend": {
    "port": 8080,
    "module": "github.com/goastra/app",
    "entrypoint": "app/cmd/server",
    "hotReload": true
  },

  "frontend": {
    "port": 4200,
    "framework": "angular",
    "proxy": "/api",
    "outputPath": "web/dist"
  },

  "codegen": {
    "schemaPath": "schema/types",
    "outputPath": "web/src/app/core/models",
    "serviceOutput": "web/src/app/core/services/generated",
    "templates": "schema/templates",
    "watch": false
  },

  "database": {
    "driver": "postgres",
    "migrationsPath": "app/migrations",
    "seedsPath": "app/seeds"
  },

  "build": {
    "outputDir": "dist",
    "backend": {
      "binary": "server",
      "ldflags": "-s -w",
      "cgo": false
    },
    "frontend": {
      "configuration": "production",
      "outputHashing": "all"
    }
  },

  "test": {
    "backend": {
      "coverage": true,
      "verbose": false,
      "timeout": "5m"
    },
    "frontend": {
      "browsers": "ChromeHeadless",
      "coverage": true
    }
  },

  "generators": {
    "api": {
      "handlerPath": "app/internal/handlers",
      "servicePath": "app/internal/services",
      "repositoryPath": "app/internal/repository",
      "modelPath": "app/internal/models"
    },
    "module": {
      "basePath": "web/src/app/features",
      "style": "css",
      "standalone": true
    },
    "crud": {
      "generateMigration": true,
      "generateTests": true
    }
  }
}
