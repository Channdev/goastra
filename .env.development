# GoAstra Development Environment
# This file is loaded when running: goastra dev

APP_ENV=development
API_URL=http://localhost:8080
PORT=8080
LOG_LEVEL=debug

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_USERNAME=root
MYSQL_PASSWORD=
MYSQL_DATABASE=goastra_dev
MYSQL_PORT=3306

# JWT Configuration
JWT_SECRET=dev-secret-change-in-production-32chars
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Frontend Configuration
FRONTEND_URL=http://localhost:4200
